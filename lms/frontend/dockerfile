# Step 1: Use Node.js as a base image
FROM node:18-alpine

# Step 2: Set working directory for the frontend
WORKDIR /usr/src/app

# Step 3: Install dependencies for the frontend
COPY package*.json ./
RUN npm install

# Step 4: Copy the source code
COPY . .

# Step 5: Build the frontend application
RUN npm run build

# Step 6: Use Nginx to serve the built app
FROM nginx:stable-alpine

# Copy the build to nginx server
COPY --from=0 /usr/src/app/dist /usr/share/nginx/html

# Expose the port for Nginx
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
